
.classfly{
  display: flex;
  padding: 0 30rpx;
}
.classfly-item{
  flex: 1;
  text-align: center;
}
.image{
  width: 128rpx;
  height: 140rpx;
}
/* 4.0 首页楼层 */
.floor-head{
  background-color: #f4f4f4;
  padding-top: 20rpx;
}
.floor-head-image{
  width: 100%;
  height: 59rpx;
}
.floor-body{
  padding: 20rpx;
  display: flex;
}
.floor-body-left-image{
  width: 232rpx;
  height: 386rpx;
}
.floor-body-right-image{
  width: 233rpx;
  height: 188rpx;
  margin-left: 7rpx;
}
/* 返回顶部 */
.top{
  position: fixed;
  right: 20rpx;
  bottom: 0;
  width: 60px;
  height: 60px;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-text{
  background: rgba(255, 255, 255, .8)
}
